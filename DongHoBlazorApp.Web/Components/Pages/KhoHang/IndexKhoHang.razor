@page "/KhoHang"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager
<PageTitle>Quản lý kho hàng</PageTitle>

<style>
    /* Custom styles for Warehouse Index */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        gap: 20px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.05);
        transition: transform 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 30px;
        color: white;
    }

    .purple .stat-icon { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .blue .stat-icon { background: linear-gradient(135deg, #00c6ff 0%, #0072ff 100%); }
    .green .stat-icon { background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); }
    .orange .stat-icon { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }

    .stat-info h3 {
        font-size: 24px;
        font-weight: 700;
        margin: 0;
        color: #2c3e50;
    }

    .stat-info p {
        color: #95a5a6;
        margin: 5px 0;
        font-size: 14px;
    }

    .stat-change {
        font-size: 12px;
        font-weight: 600;
    }

    .positive { color: #38ef7d; }
    .negative { color: #f5576c; }

    .card {
        background: white;
        border-radius: 20px;
        padding: 25px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.05);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .search-box {
        position: relative;
        width: 300px;
    }

    .search-box input {
        width: 100%;
        padding: 10px 20px 10px 45px;
        border-radius: 25px;
        border: 1px solid #e1e8ed;
        outline: none;
    }

    .search-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #95a5a6;
    }

    .filter-select {
        padding: 10px 20px;
        border-radius: 25px;
        border: 1px solid #e1e8ed;
        outline: none;
        color: #2c3e50;
    }

    .data-table {
        width: 100%;
        border-collapse: collapse;
    }

    .data-table th {
        text-align: left;
        padding: 15px;
        color: #95a5a6;
        font-weight: 600;
        border-bottom: 1px solid #f1f4f6;
    }

    .data-table td {
        padding: 15px;
        color: #2c3e50;
        border-bottom: 1px solid #f1f4f6;
    }

    .status {
        padding: 5px 12px;
        border-radius: 8px;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        border: 1px solid transparent;
    }

    .status.success { 
        background: #e6fffa; 
        color: #059669; 
        border-color: #b2f5ea;
    }

    .status.pending { 
        background: #fffaf0; 
        color: #d97706; 
        border-color: #fef3c7;
    }

    .status.cancelled { 
        background: #fef2f2; 
        color: #dc2626; 
        border-color: #fecaca;
    }

    .status-dot {
        width: 6px;
        height: 6px;
        border-radius: 50%;
        display: inline-block;
    }

    .status.success .status-dot { background: #10b981; box-shadow: 0 0 8px #10b981; }
    .status.pending .status-dot { background: #f59e0b; box-shadow: 0 0 8px #f59e0b; }
    .status.cancelled .status-dot { background: #ef4444; box-shadow: 0 0 8px #ef4444; }

    .btn {
        padding: 10px 25px;
        border-radius: 25px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-primary { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; }
    .btn-success { background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white; }
    .btn-secondary { background: #f1f4f6; color: #2c3e50; }

    .btn:hover {
        transform: scale(1.02);
        opacity: 0.9;
    }
</style>

<div class="main-content">
    <header class="top-header">
        <div class="header-left">
            <h1>Quản Lý Kho Hàng</h1>
            <p class="breadcrumb">Dashboard / Kho Hàng</p>
        </div>
        <div class="header-right">
            <button class="btn btn-primary" @onclick="@(() => NavigationManager.NavigateTo("/CreatePhieuNhap"))">+ Nhập Hàng Mới</button>
        </div>
    </header>

    <!-- Inventory Stats -->
    <div class="stats-grid">
        <div class="stat-card purple">
            <div class="stat-icon">📦</div>
            <div class="stat-info">
                <h3>@TotalItems.ToString("N0")</h3>
                <p>Tổng Sản Phẩm Trong Kho</p>
                <span class="stat-change positive">Đang lưu kho</span>
            </div>
        </div>
        <div class="stat-card blue">
            <div class="stat-icon">⚠️</div>
            <div class="stat-info">
                <h3>@LowStockCount</h3>
                <p>Sắp Hết Hàng</p>
                <span class="stat-change negative">Cần nhập thêm (&lt; 10)</span>
            </div>
        </div>
        <div class="stat-card green">
            <div class="stat-icon">💰</div>
            <div class="stat-info">
                <h3>@(TotalValue.ToString("N0") + " ₫")</h3>
                <p>Giá Trị Kho</p>
                <span class="stat-change positive">Dựa trên giá bán</span>
            </div>
        </div>
        <div class="stat-card orange">
            <div class="stat-icon">❌</div>
            <div class="stat-info">
                <h3>@OutOfStockCount</h3>
                <p>Hết Hàng</p>
                <span class="stat-change negative">Ngừng kinh doanh tạm thời</span>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card" style="margin-bottom: 20px;">
        <div style="display: flex; gap: 15px; flex-wrap: wrap;">
            <button class="btn btn-success" @onclick="@(() => NavigationManager.NavigateTo("/CreatePhieuNhap"))">📥 Nhập Kho</button>
            <button class="btn btn-primary" @onclick="@(() => NavigationManager.NavigateTo("/XuatKho"))">📤 Xuất Kho</button>
            <button class="btn btn-secondary">🔍 Kiểm Kê</button>
            <button class="btn btn-secondary">📊 Báo Cáo Kho</button>
            <button class="btn btn-secondary">📋 Xuất Excel</button>
        </div>
    </div>

    <!-- Inventory Table -->
    <div class="card">
        <div class="card-header">
            <h3>Danh Sách Tồn Kho</h3>
            <div style="display: flex; gap: 15px; align-items: center;">
                <div class="search-box">
                    <input type="text" placeholder="Tìm tên hoặc mã SP..." @bind="SearchText" @bind:event="oninput">
                    <span class="search-icon">🔍</span>
                </div>
                <select class="filter-select" @bind="SelectedStatus">
                    <option value="Tất cả">Tất cả trạng thái</option>
                    <option value="Còn hàng">Còn hàng (> 10)</option>
                    <option value="Sắp hết">Sắp hết (≤ 10)</option>
                    <option value="Hết hàng">Hết hàng (0)</option>
                </select>
            </div>
        </div>

        <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Mã SP</th>
                        <th>Tên Sản Phẩm</th>
                        <th>Phân Loại</th>
                        <th>Thương Hiệu</th>
                        <th>Số Lượng Tồn</th>
                        <th>Đơn Giá</th>
                        <th>Tổng Giá Trị</th>
                        <th>Trạng Thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if (FilteredDongHoModels != null && FilteredDongHoModels.Any())
                    {
                        @foreach (var item in FilteredDongHoModels)
                        {
                            var statusClass = item.SoLuongTon > 10 ? "success" : (item.SoLuongTon > 0 ? "pending" : "cancelled");
                            var statusText = item.SoLuongTon > 10 ? "Còn hàng" : (item.SoLuongTon > 0 ? "Sắp hết" : "Hết hàng");
                            
                            <tr>
                                <td><strong>#@item.MaDongHo</strong></td>
                                <td>
                                    <div style="display: flex; align-items: center; gap: 10px;">
                                        @if (!string.IsNullOrEmpty(item.HinhAnh))
                                        {
                                            <img src="@item.HinhAnh" style="width: 40px; height: 40px; border-radius: 8px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div style="width: 40px; height: 40px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 8px; display: flex; align-items: center; justify-content: center; font-size: 20px;">⌚</div>
                                        }
                                        <span style="font-weight: 500;">@item.TenDongHo</span>
                                    </div>
                                </td>
                                <td>@GetCategoryName(item.MaPL)</td>
                                <td>@GetBrandName(item.MaThuongHieu)</td>
                                <td>
                                    <div style="display: flex; flex-direction: column; gap: 5px;">
                                        <strong>@item.SoLuongTon</strong>
                                        <div style="width: 100%; height: 6px; background: #eee; border-radius: 3px; overflow: hidden;">
                                            <div style="width: @(Math.Min(100, item.SoLuongTon * 2))%; height: 100%; background: @(item.SoLuongTon > 10 ? "#38ef7d" : (item.SoLuongTon > 0 ? "#ff9f43" : "#f5576c"));"></div>
                                        </div>
                                    </div>
                                </td>
                                <td>@(item.GiaBan.ToString("N0") + " ₫")</td>
                                <td><strong style="color: #667eea;">@((item.GiaBan * item.SoLuongTon).ToString("N0") + " ₫")</strong></td>
                                <td>
                                    <span class="status @statusClass">
                                        <span class="status-dot"></span>
                                        <span style="font-size: 14px; margin-right: 4px;">@(statusClass == "success" ? "✓" : (statusClass == "pending" ? "⚠" : "✕"))</span>
                                        @statusText
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" style="text-align: center; padding: 40px; color: #95a5a6;">
                                <div style="font-size: 40px; margin-bottom: 10px;">🔍</div>
                                Không tìm thấy sản phẩm nào phù hợp
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Summary Bar -->
        <div style="margin-top: 20px; padding: 20px; background: #f8f9fa; border-radius: 10px; border-left: 4px solid #667eea;">
            <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 20px;">
                <div style="display: flex; gap: 30px;">
                    <div>
                        <p style="color: #95a5a6; font-size: 11px; margin-bottom: 5px; letter-spacing: 1px;">KẾT QUẢ TÌM KIẾM</p>
                        <p style="color: #2c3e50; font-size: 18px; font-weight: 600;">@FilteredDongHoModels.Count sản phẩm</p>
                    </div>
                </div>
                <div style="text-align: right;">
                    <p style="color: #95a5a6; font-size: 11px; margin-bottom: 5px; letter-spacing: 1px;">TỔNG GIÁ TRỊ HIỂN THỊ</p>
                    <p style="color: #667eea; font-size: 20px; font-weight: 700;">@(FilteredDongHoModels.Sum(s => s.GiaBan * s.SoLuongTon).ToString("N0") + " ₫")</p>
                </div>
            </div>
        </div>
    </div>
</div>